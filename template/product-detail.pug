extends layouts/default.pug
include mixins/product-item.pug
block title
    title Trang Chi Tiết Sản Phẩm

block main
    // product-info
    .product-info
        .container
            .product-info__wrap
                .product-info__left
                    .product-info__images-main
                        img(src="assets/images/product-detail-1.jpg")
                    .product-info__images-thumbs
                        img(src="assets/images/product-detail-1.jpg")
                        img(src="assets/images/product-detail-2.jpg")
                        img(src="assets/images/product-detail-3.jpg")
                        img(src="assets/images/product-detail-4.jpg")
                        img(src="assets/images/product-detail-5.jpg")
                .product-info__right
                    .breadcurmb
                        .breadcurmb__wrap
                                a(class="breadcurmb__link" href="#") Trang Chủ
                                a(class="breadcurmb__link" href="#") Chó 
                                a(class="breadcurmb__link" href="#") Chó con
                                a(class="breadcurmb__link" href="#") Shiba Inu Màu Nâu Đỏ
                    .product-info__title 
                        h1 Shiba Inu Màu Nâu Đỏ
                    .product-info__price 12.000.000 VND
                    .product-info__buttons
                        a(href="#") 
                            .button Liên hệ
                        a(href="#") 
                            div(class="button button--outline button__icon--left") 
                                i(class="fa-regular fa-comment-dots button__icon--left")
                                | Chat với Monito
                    .product-info__table
                        table 
                            tr
                                td SKU
                                td #1000078
                            tr
                                td Giống
                                td Cái
                            tr
                                td Tuổi
                                td 2 tháng
                            tr
                                td Kích thước
                                td Nhỏ
                            tr
                                td Màu sắc
                                td Nâu đỏ
                            tr
                                td Mô tả ngắn
                                td Giống thuần chủng Shih Tzu. Cấu trúc cơ thể tốt. Với chứng chỉ MKA và Microchip. Cha từ dòng dõi vô địch.
                    .box-share
                        .box-share__label 
                            i(class="fa-solid fa-share-nodes")
                            | Chia sẻ:
                        ul.box-share__list
                            li(class="box-share__item") 
                                a(class="box-share__link" target="_blank" href="#")
                                    i(class="fa-brands fa-facebook")
                            li(class="box-share__item") 
                                a(class="box-share__link" target="_blank" href="#")
                                    i(class="fa-brands fa-x-twitter")
                            li(class="box-share__item") 
                                a(class="box-share__link" target="_blank" href="#")
                                    i(class="fa-brands fa-instagram")
                            li(class="box-share__item") 
                                a(class="box-share__link" target="_blank" href="#")
                                    i(class="fa-brands fa-youtube")
    // End product-info                  

    //  Section 2 
    div(class="section-2")
        div(class="container")
            div(class="box-head")
                div(class="box-head__left")
                    div(class="box-head__sub-title") Có gì mới?
                    h2(class="box-head__title")
                        | Xem thêm có con
            div(class="section-2__wrap")
                -
                    var pets = [
                        {
                        image: 'assets/images/product-1.jpg',
                        title: 'MO231 - Pomeranian Trắng',
                        gender: 'Đực',
                        age: '02 tháng',
                        price: '6.900.000 VND'
                        },
                        {
                        image: 'assets/images/product-2.jpg',
                        title: 'MO502 - Poodle Tiny Vàng',
                        gender: 'Cái',
                        age: '02 tháng',
                        price: '3.900.000 VND'
                        },
                        {
                        image: 'assets/images/product-3.jpg',
                        title: 'MO102 - Poodle Tiny Sepia',
                        gender: 'Đực',
                        age: '02 tháng',
                        price: '4.000.000 VND'
                        },
                        {
                        image: 'assets/images/product-4.jpg',
                        title: 'MO512 - Alaskan Malamute',
                        gender: 'Đực',
                        age: '03 tháng',
                        price: '8.900.000 VND'
                        }
                    ];

                each pet in pets
                    +product-item (
                        pet.image, 
                        pet.title, 
                        pet.gender, 
                        pet.age, 
                        pet.price
                    )
    // End Section 2 


